<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/to_alarm_clock_fragment_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/to_alarm_clock_fragment" />

    <Button
        android:id="@+id/to_puzzle_difficulty_fragment_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/to_puzzle_difficulty_fragment" />

    <Button
        android:id="@+id/to_play_puzzle_fragment_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/to_play_puzzle_fragment" />

</LinearLayout>